{
  "apphosting": {
    "backendId": "lin-llc",
    "rootDir": "/",
    "ignore": [
      "**/node_modules/**",
      "package-lock.json",
      ".next",
      ".git",
      ".vscode",
      ".copilot",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "README.md"
    ],
    "alwaysDeployFromSource": true,
    "useCloudBuild": true
  },
  "emulators": {
    "auth": {},
    "firestore": {
      "rules": "firestore.rules"
    },
    "storage": {
      "rules": "storage.rules"
    },
    "ui": {
      "enabled": true
    }
  },
  "storage": {
    "rules": "storage.rules",
    "bucket": "lin-llc.firebasestorage.app"
  }
}
