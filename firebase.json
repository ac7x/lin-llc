{
  "apphosting": {
    "backendId": "lin-llc",
    "rootDir": "/",
    "ignore": [
      "**/node_modules/**",
      ".next",
      ".git",
      ".vscode",
      ".copilot",
      "package-lock.json",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "README.md"
    ],
    "alwaysDeployFromSource": true
  },
  "hosting": {
    "public": "public",
    "headers": [
      {
        "source": "/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ]
  },
  "emulators": {
    "auth": {},
    "firestore": {
      "rules": "firestore.rules"
    },
    "storage": {
      "rules": "storage.rules"
    },
    "ui": {
      "enabled": true
    }
  },
  "storage": {
    "rules": "storage.rules",
    "bucket": "lin-llc.firebasestorage.app"
  }
}
